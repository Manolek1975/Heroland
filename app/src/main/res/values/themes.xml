<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Heroland" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/macondo</item>
    </style>

    <style name="Theme.Heroland" parent="Base.Theme.Heroland" />

    <style name="AppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/layout_dialog</item>
        <!-- Used for the buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:colorAccent">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary</item>
    </style>

    <style name="TextAppearanceSmall" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/macondo</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:width">90dp</item>
        <item name="android:padding">0px</item>
    </style>

    <style name="Base.Theme.Chit" parent="Base.Theme.Heroland">
        <item name="android:layout_width">wrap_content</item>"
        <item name="android:layout_height">wrap_content</item>"
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base.Theme.Chit.Layout" parent="Base.Theme.Heroland">
        <item name="android:background">@drawable/layout_square</item>
    </style>

</resources>